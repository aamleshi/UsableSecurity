{
  "manifest_version": 2,
  "name": "New tab page",
  "version": "1.0",
  "description": "",

  "background": {
    "scripts": ["temporary.js"],
    "persistent": false
  },

  "content_scripts": [
  {
      "matches": ["*://*.amazon.com/*"],
      "js": ["Search.js"]
  },
  {
    "matches": ["*://*.youtube.com/*"],
    "js": ["Time.js"]
}
  ],

  "permissions": [
    "<all_urls>",
    "tabs"
  ]

}
