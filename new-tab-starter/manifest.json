{
  "manifest_version": 2,
  "name": "New tab page",
  "version": "1.0",
  "description": "",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
  {
      "matches": ["*://*.amazon.com/*"],
      "js": ["Search.js"]
  }
  ],

  "permissions": [
    "<all_urls>",
    "tabs"
  ]

}
